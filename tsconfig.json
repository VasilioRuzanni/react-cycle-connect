{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build/dist/es",
    "module": "es2015",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "declaration": true,
    "declarationDir": "build/lib",
    "sourceMap": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "react-cycle-connect": ["./"]
    }
  },
  "files": [
    "src/index.ts",
    "src/extra/onionify/index.ts"
  ]
}